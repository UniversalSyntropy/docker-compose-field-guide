// markdownlint-cli2 configuration
// Docs: https://github.com/DavidAnson/markdownlint
{
  "config": {
    // MD013 — line length. Disabled: tables and deep-link bullets legitimately
    // exceed 80 chars. The giant-line check (300 chars, CI) catches true regressions.
    "MD013": false,

    // MD033 — inline HTML. Allow HTML entities (&#124;) used to escape pipes
    // in GFM tables, and common structural tags.
    "MD033": {
      "allowed_elements": ["br", "details", "summary", "strong", "sub", "sup"]
    },

    // MD024 — duplicate headings. Allow in different sections (e.g. "Examples"
    // under multiple parent headings).
    "MD024": {
      "siblings_only": true
    },

    // MD041 — first line must be a top-level heading. True for docs, but
    // some files start with a comment or YAML front-matter.
    "MD041": false
  }
}
